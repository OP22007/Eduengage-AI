# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/engagement-platform

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_long_and_complex
JWT_EXPIRE=7d

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URLs (for CORS)
FRONTEND_URL=https://your-app.vercel.app

# Optional: ML Service (fallback)
ML_SERVICE_URL=http://localhost:8000

# Email Configuration (for notifications)
EMAIL_USER=noreply@yourapp.com
EMAIL_PASS=your-email-password

# Schedulers
ENABLE_RISK_SCHEDULER=true
ENABLE_NOTIFICATION_SCHEDULER=false
